= simple_form_for [:admin, @vendor] do |f|
  .form-group
    = f.input :name, input_html: {class: 'form-control'}
  .form-group
    = f.input :email, input_html: {class: 'form-control'}
  .form-group
    = f.input :company, input_html: {class: 'form-control'}
  .form-group
    = f.input :phone_number, input_html: {class: 'form-control'}
  .form-group
    = f.input :balance, input_html: {class: 'form-control'}
  .form-group
    = f.input :address, input_html: {class: 'form-control'}
  .form-group
    = f.input :country, input_html: {class: 'form-control'}
  .form-group
    = f.button :submit, 'save', class: 'btn btn-danger btn-block text-capitalize'