<%= simple_form_for [:admin, @recurring_event], url: admin_recurring_events_url, remote: true do |f| %>
  <div class="form-group">
    <%= f.input :title, input_html: { class: "form-control" } %>
  </div>
  
  <div class="form-group">
    <label>Date</label>
    <%= f.date_field :anchor, class: "form-control input-sm" %>
  </div>

  <div class="form-group">
    <%= f.input :frequency, as: :select, collection: RecurringEvent.frequencies.keys, input_html: { class: "form-control input-sm text-capitalize" }, include_blank: "Select..." %>
  </div>

  <div class="form-group">
    <%= f.input :color, as: :select, collection: [['Black','black'], ['Green','green'], ['Red','red']], input_html: { class: "form-control input-sm text-capitalize" }, include_blank: "Select..." %>
  </div>

  <div class="form-group">
    <%= f.button :submit %>
    <%= link_to 'New Event', 
                new_admin_recurring_event_path,
                class: 'btn btn-default', 
                remote: true if @recurring_event.new_record? %>
    <%= link_to 'Delete', 
                @recurring_event, 
                method: :delete, 
                class: 'btn btn-danger', 
                data: { confirm: 'Are you sure?' }, 
                remote: true unless @recurring_event.new_record? %>
  </div>
<% end %>