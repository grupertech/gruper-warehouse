<div class="container" style="margin-top: 5rem;">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2 class="text-center">Login</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "form-control" } %>
        </div>
        <div class="form-group">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "form-control" } %>
        </div>
        <div class="form-group">
          <div class="float-left">
            <strong><%= link_to "Forgot Password", new_password_path(resource_name), class: 'text-danger' %></strong>
          </div>
        </div>
        <div class="form-group">
          <%= f.button :submit, "Login", class: 'btn btn-danger btn-block text-uppercase' %>
        </div>
      <% end %>
    </div>
  </div>
</div>